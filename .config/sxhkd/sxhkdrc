#
# bspwm hotkeys
#

alt + super + Escape
    bspc quit

alt + w
    bspc node -c

alt + t
    bspc desktop -l next

alt + b
    bspc desktop -B

alt + {s,f}
    bspc node -t {floating,fullscreen}

alt + {grave,Tab}
    bspc {node,desktop} -f last

alt + apostrophe
    bspc node -s last

alt + {o,i}
    bspc control --record-history off; \
    bspc node {older,newer} -f; \
    bspc control --record-history on

alt + y
    bspc node -w last.manual

alt + m
    bspc node -s biggest

alt + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

alt + {_,shift + }c
    bspc node -f {next,prev}

alt + {comma,period}
    bspc desktop -C {backward,forward}

alt + bracket{left,right}
    bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

alt + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

#alt + alt + {h,j,k,l}
ctrl + shift + {h,j,k,l}
    bspc node -e {left -10,down +10,up -10,right +10}

#alt + alt + shift + {h,j,k,l}
ctrl + alt + shift + {h,j,k,l}
    bspc node -e {right -10,up +10,down -10,left +10}

alt + ctrl + {1-9}
    bspc node -r 0.{1-9}

alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

~button1
    bspc pointer -g focus

alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u

# Named desktops
super + {_,ctrl} + d
    /home/moveek/scripts/bspwm_{_,re}name_desktop

super + alt + d
    bspc desktop focused -r

# Control Conky
super + backslash
    kill -SIGSTOP `cat /tmp/conky.pid`

alt + backslash
    (xdotool search --onlyvisible --classname 'Conky' windowunmap && kill -SIGSTOP `cat /tmp/conky.pid`)  \
    || (xdotool search --classname 'Conky' windowmap && kill -SIGCONT `cat /tmp/conky.pid`) \
    || (conky -q -c ~/.config/conky/conkyrc_bspwm & echo $! > /tmp/conky.pid)

#
# wm independent hotkeys
#

alt + Return
    xterm

alt + space
    dmenu_run -fn "terminus-14"

# make sxhkd reload its configuration files:
alt + Escape
    pkill -USR1 -x sxhkd
