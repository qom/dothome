[module/i3]
type = internal/i3
format = <label-state> <label-mode>

;
;strip-wsnumbers = true
;

pin-workspaces = true

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.my_color4}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %name%
;label-focused-foreground = ${colors.my_foreground}
label-focused-foreground = #111111
;label-focused-background = #3f3f3f
label-focused-background = ${colors.my_color12}
;label-focused-underline = ${colors.my_color4}
label-focused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.my_foreground}
label-unfocused-background = ${colors.my_background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %name%
label-visible-underline = ${colors.my_foreground}
label-visible-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %name%
label-urgent-foreground = ${colors.my_foreground}
label-urgent-background = ${colors.my_background}
label-urgent-underline = ${colors.my_color8}
label-urgent-padding = 2

[module/wlan]
type = internal/network
interface = wlp60s0
interval = 3.0

format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.my_color5}

format-connected-background = ${colors.my_background}
;format-connected = "<ramp-signal><label-connected>"
format-connected = "<label-connected>"
format-connected-underline = #9f78e1
label-connected = " %local_ip%"

;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;ramp-signal-0 = 1
;ramp-signal-1 = 2
;ramp-signal-2 = 3
;ramp-signal-3 = 4
;ramp-signal-4 = 5
;ramp-signal-foreground = ${colors.my_foreground}

